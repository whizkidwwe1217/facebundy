<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <LinearLayout
            android:paddingBottom="8dp"
            android:id="@+id/llEmployee"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvAccessCode"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=""
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvTime"
            android:layout_below="@+id/llEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:00 AM - 10:00 PM"
            android:textColor="@color/accent_color_dark"
            android:textAppearance="@android:style/TextAppearance.Holo.Small" />

        <TextView
            android:id="@+id/tvSpan"
            android:textColor="@color/accent_color_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llEmployee"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tvTime"
            android:gravity="right"
            android:textSize="12sp"
            android:text="2hrs ago" />

        <TextView
            android:id="@+id/tvProject"
            android:layout_below="@id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Project Management Training Grounds"
            android:textColor="@color/primary_text"
            android:textAppearance="@android:style/TextAppearance.Holo.Large" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProject"
            android:textColor="@color/secondary_text"
            android:textStyle="italic"
            android:text="#564 Quirino Hi-Way, Novaliches, Quezon City, Lavander St., Francisco Homes II, Brgy. Graceville, San Jose Del Monte City, Bulacan"
            android:textAppearance="@android:style/TextAppearance.Holo.Small" />
    </RelativeLayout>
</LinearLayout>